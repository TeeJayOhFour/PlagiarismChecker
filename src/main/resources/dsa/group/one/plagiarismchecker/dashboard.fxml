<VBox fx:id="parentWindow" alignment="CENTER" prefHeight="818.0" prefWidth="596.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dsa.group.one.plagiarismchecker.DashBoardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Gauge fx:id="gauge" animated="true" decimals="2" interactive="true" knobType="FLAT" lcdDesign="RED" ledType="FLAT" maxMeasuredValue="1000.0" needleBehavior="OPTIMIZED" needleSize="THIN" needleType="VARIOMETER" prefHeight="129.0" prefWidth="556.0" skinType="SIMPLE_SECTION" unit="Plagiarism %">
      <ledColor>
         <Color red="0.2775000035762787" green="0.5475000143051147" blue="0.75" />
      </ledColor>
      <needleColor>
         <Color opacity="0.5267175436019897" />
      </needleColor>
      <customFont>
         <Font name="Roboto" size="12.0" />
      </customFont>
   </Gauge>
<!--   <PieChart fx:id="chart" startAngle="90.0" title="Test" />-->

    <Label fx:id="welcomeText" prefHeight="52.0" prefWidth="556.0" />
    <GridPane prefHeight="487.0" prefWidth="556.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="281.0" minWidth="10.0" prefWidth="272.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="0.0" prefWidth="13.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="275.0" minWidth="10.0" prefWidth="271.0" />
        </columnConstraints>
        <rowConstraints>
         <RowConstraints maxHeight="402.0" minHeight="39.0" prefHeight="39.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="723.0" minHeight="381.0" prefHeight="416.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="113.0" minHeight="10.0" prefHeight="113.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <MFXScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
            <content>
                <TextFlow fx:id="sourceTxt" maxHeight="400.0" maxWidth="268.0" prefHeight="399.0" prefWidth="270.0" style="-fx-background-color: #cfcfcf;">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding></TextFlow>
            </content>
         <GridPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </GridPane.margin>
        </MFXScrollPane>
        <MFXButton fx:id="browsePattern" onAction="#browsePatternOnClick" text="Pattern" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </MFXButton>
        <MFXButton fx:id="browseSource" onAction="#browseSourceOnClick" text="Source" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </MFXButton>
        <MFXScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" GridPane.columnIndex="2" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
            <content>
                <TextFlow fx:id="patternTxt" maxHeight="400.0" maxWidth="268.0" prefHeight="399.0" prefWidth="270.0" style="-fx-background-color: #cfcfcf;">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding></TextFlow>
            </content>
         <GridPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </GridPane.margin>
        </MFXScrollPane>
      <Label fx:id="sourceFileName" prefHeight="103.0" prefWidth="272.0" textAlignment="CENTER" wrapText="true" />
      <Label fx:id="patternFileName" prefHeight="103.0" prefWidth="272.0" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
    </GridPane>
    <MFXButton fx:id="checkBtn" onAction="#plagiarizeCheck" prefHeight="33.0" prefWidth="87.0" text="Check" />
</VBox>
